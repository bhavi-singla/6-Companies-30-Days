Number of distinct words from atmost k consecutive vowels

int kvowelwords(int n, int k) {
        int mod=1e9+7;
        vector<vector<long long int>> dp(n+1, vector<long long int>(k+1));
        
        for(int i = 0; i <= n; i++) {
            for(int j = 0; j <= k; j++) {
                if(i == 0) {
                    dp[i][j] = 1;
                }
                else {
                    dp[i][j] = dp[i-1][k] * 21 % mod;
                    if(j > 0)
                        dp[i][j] = (dp[i][j] + dp[i-1][j-1] * 5 % mod) % mod;
                }
            }
        }
        return dp[n][k];
    }
