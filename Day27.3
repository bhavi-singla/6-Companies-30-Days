Power Of Numbers

long long power(int n,int r)
    {
       if(n==0)
            return 0;
        if(n==1 || r==0)
            return 1;
        if(r==1)
            return n%mod;    
        long long int ans = power(n,r/2)%mod;
        if(r%2==0)
        {
            return (ans*ans)%mod;
        }
        return ((ans*ans)%mod*n)%mod;
    }
