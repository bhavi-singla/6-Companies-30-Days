Remove Colored Pieces if Both Neighbors are the Same Color

bool winnerOfGame(string colors) {
        int counta=0;
        int countb=0;
        int i=0;
        int n = colors.length();
        while(i<n)
        {
            int count=0;
            while(i<n && colors[i]=='A')
            {
                count++;
                i++;
            }
            if(count>2)
            {
                counta+=count-2;
            }
            count=0;
            while(i<n && colors[i]=='B')
            {
                count++;
                i++;
            }
            if(count>2)
            {
                countb+=count-2;
            }
        }
        if(counta>countb)
            return true;
        return false;
    }
