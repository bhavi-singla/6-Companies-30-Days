Possible words from Phone digits

string numbers(int x)
    {
        if(x==1)
            return "";
        if(x==2)
            return "abc";
        if(x==3)
            return "def";
        if(x==4)
            return "ghi";
        if(x==5)
            return "jkl";
        if(x==6)
            return "mno";
        if(x==7)
            return "pqrs";
        if(x==8)
            return "tuv";
        if(x==9)
            return "wxyz";
        if(x==0)
            return "";
    }
    //Function to find list of all words possible by pressing given numbers.
    void findall(int a[],int n,vector<string>& vec,int i,string& str)
    {
        if(i>=n)
        {
            vec.push_back(str);
            return ;
        }
        string s=numbers(a[i]);
        if(s=="")
        {
            findall(a,n,vec,i+1,str);
        }
        else{
            for(int j=0;j<s.length();j++)
            {
                str+=s[j];
                findall(a,n,vec,i+1,str);
                str.pop_back();
            }
        }
    }
    vector<string> possibleWords(int a[], int N)
    {
        vector<string>vec;
        string str="";
        findall(a,N,vec,0,str);
        return vec;
    }
