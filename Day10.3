Delete N nodes after M nodes

void linkdelete(struct Node  *head, int M, int N)
    {
        if(M==0)
        return ;
        if(N==0)
        return ;
        //Add code here  
        struct Node *temp=head;
        struct Node *prev=NULL;
        while(temp)
        {
            int x=M;
            while(x&&temp)
            {
                prev=temp;
                temp=temp->next;
                x--;
            }
            int y=N-1;
            while(y&&temp)
            {
                temp=temp->next;
                y--;
            }
            if(temp)
                prev->next=temp->next;
            else
                prev->next=NULL;
                
            if(temp)
                temp=temp->next;
        }
    }
