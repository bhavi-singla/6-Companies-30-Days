Count number of subtrees having sum X
 
int counttree(Node* root,int x,int& count)
{
    if(root==NULL)
    {
        return 0;
    }
    int l=counttree(root->left,x,count);
    int r=counttree(root->right,x,count);
    if(root->data+l+r==x)
        count++;
    return root->data+l+r;  
}
