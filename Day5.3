Array Pair Sum Divisibility Problem
Solution:-
 bool canPair(vector<int> nums, int k) {
        // Code here.
        int n =nums.size();
        if(n%2!=0)
            return false;
        map<int,int>freq;
        for(int i=0;i<n;i++)
        {
            freq[nums[i]%k]++;
        }
        for(int i=0;i<n;i++)
        {
            int rem=nums[i]%k;
            if(k==2*rem)
            {
                if(freq[rem]%2!=0)
                    return false;
            }
            if(rem==0){
                if(freq[rem]%2!=0)
                    return false;
            }
            else if(freq[rem]!=freq[k-rem])
                return false;
        }
        return true;
    }
