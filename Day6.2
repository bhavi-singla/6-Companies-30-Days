int longestMountain(vector<int>& arr) {
        int pre=arr[0];
        int start=-1;
        int end=0;
        int maxcount=0;
        for(int i=1;i<arr.size();i++)
        {
            if(arr[i]>pre)
            {
                start=i-1;
                while(i<arr.size() && arr[i]>pre)
                {
                    pre=arr[i];
                    i++;
                }
                i-=1;
            }
            else if(arr[i]==pre)
            {
                start=-1;
                pre=arr[i];
            }
            else{
                end=i;
                if(start!=-1)
                {
                    maxcount=max(maxcount,end-start+1);
                    cout<<start<<" "<<end<<endl;
                }
                pre=arr[i];
            }
        }
        return maxcount;
    }
};
