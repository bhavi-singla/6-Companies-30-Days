bool findnext(vector<vector<char>>& board, string word,int i, int j, int x,int n,int m,int slen)
    {
        if(x>=slen)
            return true;
        if(i<0 || j<0 || i>=n || j>=m)
            return false;
        if(word[x]==board[i][j])
        {
            char temp=board[i][j];
            board[i][j]='#';
            bool istrue= (findnext(board,word,i+1,j,x+1,n,m,slen)||findnext(board,word,i,j-1,x+1,n,m,slen)||findnext(board,word,i-1,j,x+1,n,m,slen)||findnext(board,word,i,j+1,x+1,n,m,slen));
            board[i][j]=temp;
            return istrue;
            
        }
        else return false;
    }
