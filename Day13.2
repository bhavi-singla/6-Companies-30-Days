Connect Nodes at same level

void connect(Node *root)
    {
       // Your Code Here
       queue<Node*>q;
       q.push(root);
       while(!q.empty())
       {
           int n = q.size();
           Node* prev=q.front();
           if(prev->left)
                q.push(prev->left);
            if(prev->right)
                q.push(prev->right);
           q.pop();
           for(int i=1;i<n;i++)
           {
                Node*temp=q.front();
                if(temp->left)
                    q.push(temp->left);
                if(temp->right)
                    q.push(temp->right);
                q.pop();
                prev->nextRight=temp;
                prev=temp;
           }
           prev->nextRight=NULL;
       }
    }    
